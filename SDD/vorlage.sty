% LaTeX2e style file um Loesungsblaetter zu Uebungen zu generieren.
 
\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{uebungsblatt}

\usepackage{amsmath}
\usepackage{a4wide}

\setlength{\parindent}{0pt}
\setlength{\parskip}{1.5ex}
\setlength{\textwidth}{14,5cm} 

\newcommand{\uebkopfzeile}[4]{
  \begin{center}
    \begin{bf}
      #1 \hfill #2\\
      #3 \hfill #4\\
    \end{bf}
  \end{center}
}

\newcommand{\uebtitel}[2]{
  \begin{center}
    \begin{bf}
      \bigskip
      {\LARGE #1}\\
    \end{bf}
    \textit{(Fertigstellung: #2)}
  \end{center}
}	


\newcommand{\aufgabe}[3]{
	\begin{center}
		\begin{bf}
			Aufgabe #1: #2 \hfill [\quad ] von #3 Punkten
		\end{bf}
	\end{center}
}

\newcommand{\kreativitaet}{
  \begin{center}
    \begin{bf}
      2. Kreativit\"at: \hfill [\quad ] von 10 Punkten
    \end{bf}
  \end{center}
}

\newcommand{\transfer}{
  \begin{center}
    \begin{bf}
      3. Transfer:  \hfill [\quad ] von 10 Punkten
    \end{bf}
  \end{center}
}


\newcommand{\subletter}[1]{\ensuremath{\mathrm{#1}}}
